<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef>
		<defName>VRE_FungalArmor</defName>
		<label>fungal armor</label>
		
		<description>Carriers of this gene have fungal weave in their skin, greatly decreasing incoming damage. The effects increase in severity with time.</description>
		
		<iconPath>UI/Icons/Genes/Gene_FungalArmor</iconPath>
		<prerequisite>VRE_GeneInfector</prerequisite>
		
		<displayCategory>ResistanceAndWeakness</displayCategory>
		<displayOrderInCategory>5001</displayOrderInCategory>
		<exclusionTags>
			<li>Toughness</li>
		</exclusionTags>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-3</biostatMet>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
			
				<hediffToWholeBody>VRE_FungalArmor</hediffToWholeBody>
			</li>
		</modExtensions>
	</GeneDef>
	<GeneDef>
		<defName>VRE_FungalRegeneration</defName>
		<label>fungal regeneration</label>
		
		<description>Carriers of this gene are capable of fungal regeneration. The effects increase in severity with time.</description>
		
		<iconPath>UI/Icons/Genes/Gene_FungalRegeneration</iconPath>
		<prerequisite>VRE_GeneInfector</prerequisite>
		
		<displayCategory>Healing</displayCategory>
		<displayOrderInCategory>5002</displayOrderInCategory>
		<exclusionTags>
			<li>WoundHealingRate</li>
		</exclusionTags>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-4</biostatMet>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
			
				<hediffToWholeBody>VRE_FungalRegeneration</hediffToWholeBody>
			</li>
		</modExtensions>
	</GeneDef>
</Defs>